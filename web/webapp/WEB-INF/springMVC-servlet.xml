<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.2.xsd">


	<!--静态资源映射-->
	<mvc:annotation-driven />
	<mvc:resources mapping="/bootstrap/**"
				   location="/assets/bootstrap/"/>
	<mvc:resources mapping="/css/**"
				   location="/assets/css/"/>
	<mvc:resources mapping="/js/**"
				   location="/assets/js/"/>
	<mvc:resources mapping="/img/**"
				   location="/assets/img/"/>
	<mvc:resources mapping="/font-awesome/**"
				   location="/assets/font-awesome/"/>
	<mvc:resources mapping="/other/**"
				   location="/assets/other/"/>
	<mvc:default-servlet-handler />


	<context:component-scan base-package="cn.walkwithus.controller"/>

	
	<bean id="velocityConfig" class="org.springframework.web.servlet.view.velocity.VelocityConfigurer">
		<property name="resourceLoaderPath" value="/view/velocity/" />
		<property name="velocityProperties">
			<props>
				<prop key="input.encoding">utf-8</prop>
				<prop key="output.encoding">utf-8</prop>
				<prop key="contentType">text/html;charset=UTF-8</prop>
			</props>
		</property>
	</bean>

	<bean id="velocityViewResolver" class="org.springframework.web.servlet.view.velocity.VelocityLayoutViewResolver">
		<property name="prefix" value=""/>
		<property name="suffix" value=".vm"/>
		<property name="contentType" value="text/html;charset=UTF-8"/>
		<property name="layoutUrl" value="layout/nolayout.vm"/>
		<property name="order" value="0"/>
	</bean>




</beans>